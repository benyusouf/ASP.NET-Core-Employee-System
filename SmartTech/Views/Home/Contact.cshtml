@{
    ViewData["Title"] = "Contact";
}

<div class="container-fluid my-5 p-5">
    <div class="row">
        <div class="col-md-7">
            <div class="card">
                
                <h5 class="card-header text-primary" style="height: 40px; padding-top: 8px">Contact Us</h5>
              
                <div class="card-body">
                    <h6 class="card-text">Leave us a message, we would love to hear from you.</h6>
                    <form >
                        <div class="form-group">
                            <label for="name">Full Name:</label>
                            <input type="text" id="name" class="form-control"/>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email Address:</label>
                            <input type="email" id="email" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="message">Message:</label>
                            <textarea class="form-control" id="message" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Send" class="btn btn-primary float-right"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="row mb-3">
                <div class="col-12">
                    <div class="card">
                
                        <h5 class="card-header text-primary" style="height: 40px; padding-top: 8px">Business Addresses</h5>
              
                        <div class="card-body">
                            <h6 class="card-title text-muted">Head Office</h6>
                            <p>
                                4E Kanta Road off Ahmadu Bello Way<br/>
                                Unguwar Sarki, Kaduna.<br/>
                            </p>
                            
                            <h6 class="card-title text-muted">Branch Office</h6>
                            <p>
                                122 Discovery plaza Adetokumbo Ademola Crescent<br/>
                                Wuse 2, Abuja.<br/>
                            </p>
                            
                            <h6 class="card-title text-muted">Business Hours</h6>
                            <p>
                                Monday - Friday <span class="text-muted"><i>8:00AM - 6:00PM</i></span><br/>
                                Saturday <span class="text-muted"><i>9:00AM - 4:00PM</i></span><br/>
                                Sunday <span class="text-muted"><i>Closed</i></span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <div class="card">
                
                        <h5 class="card-header text-primary" style="height: 40px; padding-top: 8px">Support Contacts</h5>
              
                        <div class="card-body">
                            <h6 class="card-title text-muted">Emails</h6>
                            <p>
                                <strong>Support:</strong> <a href="mailto:support@smarttech.com">support@smarttech.com</a><br/>
